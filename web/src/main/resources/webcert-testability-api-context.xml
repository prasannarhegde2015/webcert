<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:jaxrs="http://cxf.apache.org/jaxrs"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd"
  profile="dev,testability-api">

  <!-- REST services for inserting questions and certificate drafts directly 
    into the database for testing purposes -->
    
  <jaxrs:server address="/">
    <jaxrs:serviceBeans>
      <bean class="se.inera.intyg.webcert.web.web.controller.testability.QuestionResource" />
      <bean class="se.inera.intyg.webcert.web.web.controller.testability.LogResource" />
      <bean class="se.inera.intyg.webcert.web.web.controller.testability.IntygResource" />
      <bean class="se.inera.intyg.webcert.web.web.controller.testability.UserResource" />
      <bean class="se.inera.intyg.webcert.web.web.controller.testability.FmbResource" />
    </jaxrs:serviceBeans>
    <jaxrs:providers>
      <ref bean="jacksonJsonProvider" />
    </jaxrs:providers>
    <jaxrs:extensionMappings>
      <entry key="json" value="application/json" />
    </jaxrs:extensionMappings>
  </jaxrs:server>

</beans>
