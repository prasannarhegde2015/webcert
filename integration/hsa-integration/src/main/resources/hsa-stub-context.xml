<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxrs="http://cxf.apache.org/jaxrs"
       xmlns:jaxws="http://cxf.apache.org/jaxws"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                            http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd
                            http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd">

  <beans profile="dev,wc-all-stubs,wc-hsa-stub,testability-api">
    <bean id="hsaServiceStub" class="se.inera.intyg.webcert.integration.hsa.stub.HsaServiceStub"/>
  </beans>

  <beans profile="dev,wc-all-stubs,wc-hsa-stub">

    <!-- TODO fix this for the new contracts. Consider if all sub-services (getEmployee, getUnit, getMembers etc should be served through one single common stub like below -->
    <!-- <jaxws:endpoint address="/hsa" implementor="se.inera.intyg.webcert.integration.hsa.stub.HsaWebServiceStub"/>         -->
    <jaxws:endpoint address="/hsa-authorization" implementor="se.inera.intyg.webcert.integration.hsa.stub.GetAuthorizationsForPersonResponderStub" />
    <jaxws:endpoint address="/hsa-employee" implementor="se.inera.intyg.webcert.integration.hsa.stub.GetEmployeeResponderStub" />
    <jaxws:endpoint address="/hsa-healthcare" implementor="se.inera.intyg.webcert.integration.hsa.stub.GetHealthCareUnitResponderStub" />
    <jaxws:endpoint address="/hsa-healthcareunit-members" implementor="se.inera.intyg.webcert.integration.hsa.stub.GetHealthCareUnitMembersResponderStub" />
    <jaxws:endpoint address="/hsa-unit" implementor="se.inera.intyg.webcert.integration.hsa.stub.GetUnitResponderStub" />

    <bean class="se.inera.intyg.webcert.integration.hsa.stub.BootstrapBean"/>
  </beans>

  <beans profile="dev,testability-api">
    <jaxrs:server address="/hsa-api">
      <jaxrs:serviceBeans>
        <ref bean="hsaStubRestApi"/>
      </jaxrs:serviceBeans>
      <jaxrs:providers>
        <ref bean="jacksonJsonProvider"/>
      </jaxrs:providers>
      <jaxrs:extensionMappings>
        <entry key="json" value="application/json"/>
      </jaxrs:extensionMappings>
    </jaxrs:server>
  
    <bean id="hsaStubRestApi" class="se.inera.intyg.webcert.integration.hsa.stub.HsaStubRestApi"/>
  </beans>

</beans>
